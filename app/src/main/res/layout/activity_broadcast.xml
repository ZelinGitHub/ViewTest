<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainAty">

    <Button
        android:text="发送无序广播"
        android:id="@+id/btn_send_broadcast"
        android:layout_marginTop="16dp"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
    <Button
        android:text="发送有序广播"
        android:id="@+id/btn_send_order_broadcast"
        android:layout_marginTop="16dp"
        android:layout_width="200dp"
        android:layout_height="50dp"/>

    <Button
        android:text="发送本地异步广播"
        android:id="@+id/btn_send_local_broadcast"
        android:layout_marginTop="16dp"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
    <Button
        android:text="发送本地同步广播"
        android:id="@+id/btn_send_local_sync_broadcast"
        android:layout_marginTop="16dp"
        android:layout_width="200dp"
        android:layout_height="50dp"/>
</LinearLayout>